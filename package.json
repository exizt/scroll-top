{
  "name": "exizt-scroll-top",
  "version": "3.0.5",
  "description": "",
  "main": "scroll-top.js",
  "scripts": {
    "build": "npm run tsc & npm run minify",
    "build.legacy": "npm run tsc.legacy && npm run minify.legacy",
    "build.css": "npx clean-css-cli -o ./dist/scroll-top.min.css ./src/css/scroll-top.css",
    "tsc": "tsc",
    "tsc.legacy": "tsc --project tsconfig.es5.json",
    "minify": "npx uglifyjs ./dist/scroll-top.js --output ./dist/scroll-top.min.js --mangle",
    "minify.legacy": "npx uglifyjs ./dist/scroll-top.es5.js --output ./dist/scroll-top.es5.min.js --mangle",
    "webpack": "npx webpack --mode production",
    "webpack.dev": "npx webpack --mode development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exizt/scroll-to-top.git"
  },
  "author": "EXIzT",
  "license": "MIT",
  "homepage": "https://exizt.github.io/scroll-to-top/",
  "devDependencies": {
    "clean-css": "^5.1.3",
    "css-loader": "^6.7.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.3.4",
    "uglify-js": "^3.13.10",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}

