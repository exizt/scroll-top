{
  "name": "exizt.scroll-top",
  "version": "4.0.8",
  "description": "",
  "main": "./dist/scroll-top.class.js",
  "scripts": {
    "build": "npm run webpack && npm run webpack.legacy && npm run tsc.class",
    "tsc": "tsc",
    "tsc.class": "tsc ./src/scroll-top.ts --outfile ./dist/scroll-top.class.js --module amd --target es2016",
    "minify": "npx uglifyjs ./dist/scroll-top.js --output ./dist/scroll-top.min.js --mangle",
    "minify.css": "npx clean-css-cli -o ./dist/scroll-top.min.css ./src/css/scroll-top.css",
    "minify.legacy": "npx uglifyjs ./dist/scroll-top.es5.js --output ./dist/scroll-top.es5.min.js --mangle",
    "webpack": "npx webpack --mode production",
    "webpack.dev": "npx webpack --mode development",
    "webpack.legacy": "npx webpack --config webpack.config.legacy.js --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exizt/scroll-top.git"
  },
  "author": "exizt",
  "license": "MIT",
  "homepage": "https://exizt.github.io/scroll-top/",
  "devDependencies": {
    "clean-css": "^5.1.3",
    "css-loader": "^6.7.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.3.4",
    "uglify-js": "^3.13.10",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}